{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
"esModuleInterop": true,
"moduleResolution": "NodeNext",
"target": "es2020",
"module": "NodeNext",
"lib": ["es2020", "dom"],
"paths": {
      "@discovergroup/types": ["packages/types/src"],
      "@discovergroup/*": ["packages/*/src"]
    }
    // REMOVE "types": ["node"] from here
  },
  "include": [
    "src",
    "apps/**/*",
    "packages/**/*",
    "jobs/**/*",
    "scripts/**/*"
  ]
}