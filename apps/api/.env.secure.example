# ===========================================
# DISCOVERGROUP API - SECURE ENV TEMPLATE
# ===========================================

# SERVER
NODE_ENV=development
PORT=4000

# DATABASE
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/discovergroup

# SECURITY - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE-THIS-TO-RANDOM-64-CHAR-STRING
SESSION_SECRET=CHANGE-THIS-TO-RANDOM-64-CHAR-STRING

# EMAIL
SENDGRID_API_KEY=SG.your_key_here
SENDGRID_FROM_EMAIL=your-email@example.com
SENDGRID_FROM_NAME=Discover Group

# PAYMENTS
PAYMONGO_SECRET_KEY=sk_test_your_key
DRAGONPAY_MERCHANT_ID=your_merchant_id
STRIPE_SECRET_KEY=sk_test_your_key

# STORAGE - Cloudflare R2
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://your-public-domain.com

# CORS
CLIENT_URL=http://localhost:5173
ADMIN_URL=http://localhost:5174
