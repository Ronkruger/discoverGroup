{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
      "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "esnext",
      "lib": ["es2020", "dom"],
    "paths": {
      "@discovergroup/types": ["packages/types/src"],
      "@discovergroup/*": ["packages/*/src"]
    },
    "types": ["node"]
  },
  "include": [
    "src",
    "apps/**/*",
    "packages/**/*",
    "jobs/**/*",
    "scripts/**/*"
  ]
}